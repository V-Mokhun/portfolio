---
import {
  Container,
  HeaderMobileMenu,
  buttonVariants,
  HeaderNav,
  LangPicker,
  ThemeToggle,
} from "@/ui/react";
import Logo from "../shared/logo.astro";
import { t } from "i18next";
import i18next from "i18next";
import { defaultLang } from "@/lib";

const currentLang = i18next.resolvedLanguage || defaultLang;
---

<header
  class="bg-background h-header-height backdrop-blur-md fixed left-0 right-0 top-0 z-10"
>
  <Container className="h-full md:px-10">
    <div class="flex items-center justify-between gap-5 h-full">
      <!-- <HeaderMobileMenu {currentLang} client:load /> -->
      <Logo className="" />
      <HeaderNav navClassName="hidden lg:flex" {currentLang} />
      <div class="flex items-center gap-2 lg:gap-3">
        <a
          class={buttonVariants({
            className: "md:text-lg h-9 lg:h-10 px-4 sm:px-6",
          })}
          href="/#contact">{t("nav.contact")}</a
        >
        <LangPicker currentLang={currentLang} client:load />
        <ThemeToggle client:load />
      </div>
    </div>
  </Container>
</header>

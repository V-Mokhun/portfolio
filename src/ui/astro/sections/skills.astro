    <Title className="mb-8 xs:mb-10">Skills</Title>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 group">
      {SKILLS.map((skill) => <SkillsItem client:visible {...skill} />)}
    </div>
  </Container>
</section>

import { Container, Title, SkillsItem } from "@/ui/react";

const SKILLS = [
  {
    name: "JavaScript",
    icon: "javascript",
    color: "#f7df1e",
  },
  {
    name: "React.js",
    icon: "react",
    color: "#61dbfb",
  },
  {
    name: "TypeScript",
    icon: "typescript",
    color: "#007acc",
  },
  {
    name: "Next.js",
    icon: "nextdotjs",
    color: "#ffffff",
  },
  {
    name: "HTML",
    icon: "html",
    color: "#e34f26",
  },
  {
    name: "CSS",
    icon: "css",
    color: "#264de4",
  },
  {
    name: "Tailwind",
    icon: "tailwindcss",
    color: "#38b2ac",
  },
  {
    name: "Playwright",
    icon: "playwright",

---
import { Animate, Container, HeroParticles, RippleButton } from "@/ui/react";
import { t } from "i18next";
---

<section
  id="hero"
  class="py-6 md:py-10 min-h-[calc(100svh-var(--header-height))] h-[calc(100svh-var(--header-height))]"
>
  <HeroParticles client:only />
  <Container className="h-full">
    <div class="flex justify-center items-start text-left flex-col h-full">
      <Animate
        client:load
        tag="h1"
        className="text-primary mb-3"
        config={{
          from: {
            opacity: 0,
          },
          to: { opacity: 1 },
          delay: 900,
          config: { duration: 300 },
        }}
        >{t("hero.greeting")}
      </Animate>
      <Animate
        client:load
        tag="h2"
        className="text-clamp-heading-big text-title leading-none font-semibold mb-1 md:mb-0"
        config={{
          from: {
            opacity: 0,
            transform: "translateY(30px)",
          },
          to: { opacity: 1, transform: "translateY(0)" },
          delay: 1300,
          config: { duration: 400 },
        }}
      >
        {t("hero.title")}
      </Animate>
      <Animate
        client:load
        tag="h3"
        className="text-clamp-heading-big leading-tight mb-5 font-semibold"
        config={{
          from: {
            opacity: 0,
            transform: "translateY(-30px)",
          },
          to: { opacity: 1, transform: "translateY(0)" },
          delay: 1300,
          config: { duration: 400 },
        }}
      >
        {t("hero.subtitle")}
      </Animate>
      <Animate
        client:load
        config={{
          from: {
            opacity: 0,
          },
          to: { opacity: 1 },
          delay: 1800,
          config: { duration: 300 },
        }}
      >
        <>
          <p class="max-w-lg leading-normal font-light mb-8">
            {t("hero.description")}
          </p>
          <RippleButton size="lg" tag="a" href="/#contact" client:load>
            {t("contactMe")}
          </RippleButton>
        </>
      </Animate>
    </div>
  </Container>
</section>
